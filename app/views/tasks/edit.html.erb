<div class="container">
  <h1>Edit Task</h1>
  <%= form_with model:@task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label d-block"  %>
    <%= f.text_field :title, class: "form-text" %>
  </div>
  <div class="mb-3">
    <%= f.label :details, class: "form-label d-block" %>
    <%= f.text_field :details, class: "form-text" %>
  </div>
    <%= f.submit class:"btn btn-primary mb-3" %>
  <% end  %>
  <%= link_to "Back to list", tasks_path  %>
</div>
